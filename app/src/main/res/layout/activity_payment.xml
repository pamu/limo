<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ws.empirelimo.PaymentActivity" >

        <TextView
            android:id="@+id/textPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Payment"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editCardholderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPayment"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorner"
            android:hint="Card Holder Name"
            android:maxLength="20"
            android:paddingBottom="8dp"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editCardholderNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editCardholderName"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorner"
            android:hint="Card Number"
            android:inputType="number"
            android:maxLength="16"
            android:paddingBottom="8dp"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:text="4111111111111111" />

        <LinearLayout
            android:id="@+id/layoutExpire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editCardholderNumber"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editCardholderMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/roundedcorner"
                android:hint="Month"
                android:inputType="number"
                android:maxLength="2"
                android:paddingBottom="8dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:text="05" />

            <EditText
                android:id="@+id/editCardholderYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/roundedcorner"
                android:hint="Year"
                android:inputType="number"
                android:maxLength="4"
                android:paddingBottom="8dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:text="2009" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutExpire"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundedcorner"
            android:minHeight="1dp"
            android:paddingBottom="8dp"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:text="Pay Now"
            android:textColor="@android:color/black" />
    </RelativeLayout>

</ScrollView>