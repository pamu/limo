<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:paddingBottom="15dp" >

        <TextView
            android:id="@+id/textSetPickDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Set Pick Up Details"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TimePicker
            android:id="@+id/pickerTime"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@+id/textSetPickDate"
            android:layout_centerHorizontal="true" />

        <DatePicker
            android:id="@+id/pickerDate"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@+id/pickerTime"
            android:layout_centerHorizontal="true"
            android:calendarViewShown="false" />

        <Button
            android:id="@+id/buttonBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pickerDate"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedcorner"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Book" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonBook"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedcorner"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Go Back" />
    </RelativeLayout>

</ScrollView>